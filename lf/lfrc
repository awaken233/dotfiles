# 官方网址 https://github.com/gokcehan/lf 
# interpreter for shell commands
set shell zsh
set relativenumber
set previewer ~/.config/lf/pv.sh
set hidden true

# 设置shell选项，使命令更安全（出错时退出，未定义变量时报错）
set shellopts '-eu'

# 设置字段分隔符为换行符，便于正确分割文件名列表
set ifs "\n"

# leave some space at the top and the bottom of the screen
set scrolloff 10

# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# Nerd Fonts 图标支持
set icons true

# 显示文件/目录大小信息
set info size

# 显示目录中的文件数量
set dircounts

# 边输入边筛选
set incsearch true

# use enter for shell commands
map <enter> shell

# show the result of execution of previous commands
map ` !true


map E $cursor "$f"

# execute current file (must be executable)
# map x $$f
# map X !$f

# This command is called when current file is not a directory. You may want to
# use either file extensions and/or mime types here. Below uses an editor for
# text files and a file opener for the rest.
cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

# 在 Finder 中打开当前目录（macOS）
cmd finder_here &{{
    open -a Finder "$PWD"
}}

cmd trash %set -f; mv $fx ~/.Trash

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# 当前目录下进行全文搜索
#Combining fzf with ripgrep, you can interactively search in the contents of files under the current directory and select a file from the results:
cmd fzf_search ${{
    res="$( \
        RG_PREFIX="rg --column --line-number --no-heading --color=always \
            --smart-case "
        FZF_DEFAULT_COMMAND="$RG_PREFIX ''" \
            fzf --bind "change:reload:$RG_PREFIX {q} || true" \
            --ansi --layout=reverse --header 'Search in files' \
            --delimiter : \
            --preview 'bat --color=always --style=numbers,header --highlight-line {2} {1}' \
            --preview-window 'right:45%:wrap:border-left,+{2}+3/3' \
            | cut -d':' -f1
    )"
    [ ! -z "$res" ] && lf -remote "send $id select \"$res\""
}}

# 搜索当前目录下的文件
cmd fzf_jump ${{
    res="$(fd . | fzf --reverse --header='Jump to location')"
    if [ -n "$res" ]; then
        if [ -d "$res" ]; then
            cmd="cd"
        else
            cmd="select"
        fi
        res="$(printf '%s' "$res" | sed 's/\\/\\\\/g;s/"/\\"/g')"
        lf -remote "send $id $cmd \"$res\""
    fi
}}

map y
map yy copy
# 这里的dirname,printf是shell script 函数
# 复制文件目录路径
map yd $dirname -- "$f"| pbcopy
# 复制文件名
map yf $basename -a -- $fx | pbcopy
# 复制全路径(包含文件名)
map yp $printf "%s" "$fx" | pbcopy
# 复制文件内容到剪贴板中(二进制内容 pbcopy 无法复制)
map yc $pbcopy < "$fx"
# rename file
map r :rename; cmd-end
map R reload

map a :push %touch<space>
map A :push %mkdir<space>-p<space>

map x %trash -F ${(f)fx}

# 用默认程序打开文件
map o :push %open<space>$f<enter>

# Finder 集成快捷键（macOS）
# gf: 在 Finder 中打开当前目录
map gf finder_here

# 常用快捷路径
map gh cd ~
map gi cd ~/IdeaProjects/
map gd cd ~/Downloads/
map gc cd ~/Documents/
map gt cd ~/IdeaProjects/dotfiles/

map <c-s> :fzf_search
map <c-f> :fzf_jump

map i $~/.config/lf/pv.sh $f | less -R

